{
  "version": 2,
  "builds": [
    {
      "src": "api.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/forum/(.*)",
      "destination": "/api.py"
    },
    {
      "source": "/(.*)",
      "destination": "/api.py"
    }
  ],
  "env": {
    "USE_POSTGRES": "true",
    "VERCEL": "1"
  }
}

