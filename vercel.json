{
  "version": 2,
  "builds": [
    {
      "src": "api/explorer.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/forum.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/market_maker.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/forum_realtime.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/forum-realtime/(.*)",
      "destination": "/api/forum_realtime.py"
    },
    {
      "source": "/forum-realtime/(.*)",
      "destination": "/api/forum_realtime.py"
    },
    {
      "source": "/market-maker/(.*)",
      "destination": "/api/market_maker.py"
    },
    {
      "source": "/forum/realtime/(.*)",
      "destination": "/api/forum_realtime.py"
    },
    {
      "source": "/forum/(.*)",
      "destination": "/api/forum.py"
    },
    {
      "source": "/static/(.*)",
      "destination": "/web/static/$1"
    },
    {
      "source": "/forum/static/(.*)",
      "destination": "/web/static/forum/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/explorer.py"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "VERCEL": "1",
    "DATABASE_PATH": "/tmp/gxc_explorer.db",
    "FORUM_DATABASE_PATH": "/tmp/gxc_forum.db"
  }
}

