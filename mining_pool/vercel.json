{
  "version": 2,
  "builds": [
    {
      "src": "api.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api.py"
    }
  ],
  "env": {
    "VERCEL": "1",
    "POOL_TYPE": "general",
    "DATABASE_PATH": "/tmp/pool.db",
    "BLOCKCHAIN_NODE_URL": "https://gxc-chain112-blockchain-node-production.up.railway.app",
    "RAILWAY_NODE_URL": "https://gxc-chain112-blockchain-node-production.up.railway.app"
  }
}

